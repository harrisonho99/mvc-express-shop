<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <form class="product-form" action="/admin/<%  if (editing){%>edit-product<%} else {%>add-product<%}%>"
                    method="POST">
                    <div class="form-control">
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title" required
                            value="<%  if (editing){%><%=product.title%><%} else {%><%}%>">
                    </div>
                    <div class="form-control">
                        <label for="imageUrl">Image URL</label>
                        <input type="text" name="imageUrl" id="imageUrl" required
                            value="<%  if (editing){%><%=product.imageUrl%><%} else {%><%}%>">
                    </div>
                    <div class="form-control">
                        <label for="price">Price</label>
                        <input type="number" name="price" id="price" step="0.01" required
                            value="<%  if (editing){%><%=product.price%><%} else {%><%}%>">
                    </div>
                    <div class="form-control">
                        <label for="description">Description</label>
                        <textarea name="description" id="description" rows="5" required><% if (editing){%><%=product.description%><%} else {%><%}%>
                        </textarea>
                    </div>
                    <div class="form-control form-control-btn ">
                        <button class="btn" type="submit">
                            <% if (editing){ %>Update<%} else { %>Add Product<%} %>
                        </button>
                    </div>
                    <% if (editing) { %>
                        <input type="hidden" name="id" value="<%=product.id%>">
                        <% } %>
                </form>
            </main>
            <%- include('../includes/end.ejs') %>